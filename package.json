{
  "name": "thtml",
  "version": "2.3.0",
  "description": "Typesafe HTML templating for NodeJS",
  "main": "build/index.js",
  "repository": "git@github.com:felipeochoa/thtml.git",
  "author": "Felipe Ochoa",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "jest"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx"
    ],
    "transform": {
      "\\.[jt]sx?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/build/"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
